rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isManager() {
      return isAuthenticated() && getUserData().role == 'manager';
    }

    function isEmployee() {
      return isAuthenticated() && getUserData().role == 'employee';
    }

    // Users collection
    // - Users can read and update their own document
    // - Managers can read all user documents
    // - Only authenticated users can create (during registration)
    match /users/{userId} {
      allow read: if isOwner(userId) || isManager();
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isOwner(userId);
      allow delete: if false; // No one can delete users
    }

    // Employees collection (Master Data)
    // - All authenticated users can read (for overtime form employee selection)
    // - Only managers can create, update, or delete employees
    match /employees/{employeeId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isManager();
    }

    // Overtime Requests collection
    // - Users can read their own requests
    // - Managers can read all requests
    // - Users can create requests (submittedBy must match their uid)
    // - Users can update their own PENDING or REJECTED requests
    // - Managers can update any request (for approval/rejection)
    match /overtime_requests/{requestId} {
      allow read: if isAuthenticated() && (
        resource.data.submittedBy == request.auth.uid ||
        isManager()
      );

      allow create: if isAuthenticated() &&
        request.resource.data.submittedBy == request.auth.uid &&
        request.resource.data.status == 'PENDING';

      allow update: if isAuthenticated() && (
        // Employee can update their own pending/rejected requests
        (resource.data.submittedBy == request.auth.uid &&
         resource.data.status in ['PENDING', 'REJECTED']) ||
        // Manager can approve/reject any request
        isManager()
      );

      allow delete: if false; // No one can delete requests (audit trail)
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
